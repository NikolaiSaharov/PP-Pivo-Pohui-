<UserControl x:Class="FirstTask.EqualizerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FirstTask"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border x:Name="Bar1" Width="5" Height="20" Background="White" Margin="2" CornerRadius="4"/>
            <Border x:Name="Bar2" Width="5" Height="20" Background="White" Margin="2" CornerRadius="4"/>
            <Border x:Name="Bar3" Width="5" Height="20" Background="White" Margin="2" CornerRadius="4"/>
            <Border x:Name="Bar4" Width="5" Height="20" Background="White" Margin="2" CornerRadius="4"/>
            <Border x:Name="Bar5" Width="5" Height="20" Background="White" Margin="2" CornerRadius="4"/>
        </StackPanel>
    </Grid>
</UserControl>