    <Grid>
        <!-- Градиентный фон -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#913AC7" Offset="0.0"/>
                <GradientStop Color="#090909" Offset="0.5"/>
                <GradientStop Color="#090909" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Левая часть с изображением альбома и кнопками -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="100,87,0,90">
            <Border Background="Gray" Width="351" Height="351" CornerRadius="20">
                <Grid>
                    <Image Source="Images/placeholder.jpg" Stretch="Uniform"/>
                    <!-- Кнопка с троеточием -->
                    <Button x:Name="EllipsisButton"
                            Width="38" Height="38"
                            Background="#80000000"
                            BorderBrush="Transparent"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,5,5,0"
                            Opacity="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="19"
                                        Padding="5">
                                    <TextBlock Text="..."
                                               FontSize="16"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            <TextBlock Text="Мой плейлист" FontFamily="Inter" FontWeight="Bold" FontSize="21" Foreground="White" Margin="90,25,0,0" Height="31"/>
            <TextBlock Text="25 треков, примерно 1 ч. 25 мин." FontFamily="Inter" FontWeight="Bold" FontSize="18" Foreground="#9B9B9B" Margin="25,15,0,10"/>
