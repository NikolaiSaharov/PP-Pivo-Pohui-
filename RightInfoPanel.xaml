<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="FirstTask.RightInfoPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:FirstTask"
      mc:Ignorable="d"
      d:DesignHeight="920" d:DesignWidth="363"
      Title="RightInfoPanel">

    <Border Background="#121212" 
            CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" 
                            Direction="-90" 
                            ShadowDepth="5" 
                            Opacity="0.3"/>
        </Border.Effect>
        <Grid>
            <StackPanel Margin="20">
                <TextBlock Text="Информация о треке"
                         Foreground="White"
                         FontSize="24"
                         FontWeight="Bold"
                         Margin="0,0,0,20"/>
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Название:"
                             Foreground="#808080"
                             FontSize="16"
                             Margin="0,0,0,5"/>
                    <TextBlock Text="Sample Track"
                             Foreground="White"
                             FontSize="18"
                             FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Исполнитель:"
                             Foreground="#808080"
                             FontSize="16"
                             Margin="0,0,0,5"/>
                    <TextBlock Text="Sample Artist"
                             Foreground="White"
                             FontSize="18"
                             FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Альбом:"
                             Foreground="#808080"
                             FontSize="16"
                             Margin="0,0,0,5"/>
                    <TextBlock Text="Sample Album"
                             Foreground="White"
                             FontSize="18"
                             FontWeight="SemiBold"/>
                </StackPanel>
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Длительность:"
                             Foreground="#808080"
                             FontSize="16"
                             Margin="0,0,0,5"/>
                    <TextBlock Text="3:45"
                             Foreground="White"
                             FontSize="18"
                             FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Page>
